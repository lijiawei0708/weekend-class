datasource db {
  provider = "sqlite"
  url = "***"
}

generator prisma_client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  name     String
  avatar   String?
  posts     Post[]
}

model Post {
  id        String   @id @default(cuid())
  content   String
  like      Int      @default(0)
  author    User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}
