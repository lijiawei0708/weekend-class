{
    "name": "backend",
    "license": "UNLICENSED",
    "version": "0.0.0",
    "dependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/graphql-relay": "^0.6.0",
        "@types/jsonwebtoken": "^8.5.0",
        "bcryptjs": "^2.4.3",
        "dotenv-cli": "^3.2.0",
        "graphql-relay": "^0.6.0",
        "jsonwebtoken": "^8.5.1",
        "nexus": "0.26.1",
        "nexus-plugin-prisma": "^0.18.1"
    },
    "scripts": {
        "format": "npx prettier --write './**/*.{ts,md}'",
        "dev": "nexus dev",
        "build": "nexus build",
        "start": "node .nexus/build/api",
        "test": "dotenv -e .env -- jest",
        "migrate:save": "dotenv -e .env -- prisma migrate save --experimental",
        "migrate:up": "dotenv -e .env -- prisma migrate up --experimental",
        "seed": "ts-node prisma/seed"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all"
    },
    "devDependencies": {
        "@types/jest": "^26.0.13",
        "jest": "^26.4.2",
        "prettier": "^2.1.1",
        "ts-jest": "^26.3.0"
    },
    "jest": {
        "preset": "ts-jest",
        "globals": {
            "ts-jest": {
                "diagnostics": {
                    "warnOnly": true
                }
            }
        },
        "testEnvironment": "./tests/nexus-test-environment.js"
    }
}